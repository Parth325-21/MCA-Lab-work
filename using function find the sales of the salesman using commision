#include <stdio.h>
int sales(float,float);
int main()
{
    float n1,A1;
    printf("enter the sales of the salesman");
    scanf("%f",&n1);
    int calculate = sales(n1,A1);
}
int sales(float n,float A)
{
    if(n>50000)
    {
        A = n*0.01;
        printf("the sales of the salesman %d",A);
    }
    else if(n>50000 && n<=40000)
    {
        A = n*0.07;
        printf("the sale of the salesman %d",A);
    }
    else if(n>40000 && n<=30000)
    {
        A = n*0.05;
        printf("the sale of the salesman %d",A);
    }
    else 
    {
        A = n*0.02;
        printf("the sale of the salesman %d",A);
    }
}
