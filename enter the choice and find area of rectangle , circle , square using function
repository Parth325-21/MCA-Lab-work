#include <stdio.h>
int choice(int,float);
void main()
{
    int n1;float l1,b1,r1,A1,s1;
    printf("enter the value of n");
    scanf("%d",&n1);
    choice(n1,A1);
}
int choice(int n,float A)
{
    float l,b,s,r;
    if(n==1)
    {
         printf("enter the value of l and b");
         scanf("%f %f",&l,&b);
        A = l*b;
        printf("Area of rectangle is given by %f",A);
    }
    else if(n==2)
    {
        printf("enter the side of a square");
        scanf("%f",&s);
        A = s*s;
        printf("Area of square is given by %f",A);
    }
    else if(n==3)
    {
        printf("enter the value of radius");
        scanf("%f",&r);
        A = 3.14*r*r;
        printf("Area of circle is given by %f",A);
    }
}
